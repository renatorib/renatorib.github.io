{
  "env": {
    "development": {
      "presets": ["next/babel"]
    },
    "production": {
      "presets": ["next/babel"]
    },
    "test": {
      "presets": [["next/babel", { "preset-env": { "modules": "commonjs" } }]]
    }
  },
  "plugins": [
    "babel-plugin-macros",
    "babel-plugin-preval",
    [
      "babel-plugin-module-resolver",
      {
        "extensions": [".mdx"],
        "alias": {
          "~": "./src"
        }
      }
    ]
  ]
}
